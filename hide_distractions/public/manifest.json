{
  "manifest_version": 3,
  "name": "Focus Bear",
  "version": "1.0",
  "description": "Hide distractions using a clean Chrome Extension.",
  "permissions": ["activeTab", "scripting", "storage", "tabs"],
  "host_permissions": ["*://*.youtube.com/*", "*://*.linkedin.com/*"],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "128": "icons/bearLogo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {"matches": [
      "https://www.youtube.com/*",
      "https://www.linkedin.com/*"  
    ],
      "js": ["content.js", "homePageBlur.js"],
      "css": ["assets/intentionPopup.css"]
    },
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["linkedin.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["floatingPopup.js", 
      "assets/*"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["icons/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "128": "icons/bearLogo.png"
  }
}
